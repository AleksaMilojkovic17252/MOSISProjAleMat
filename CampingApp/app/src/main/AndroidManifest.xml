<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="elfak.mosis.campingapp">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <queries>
        <intent>
            <action android:name="android.media.action.IMAGE_CAPTURE" />
        </intent>
    </queries>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ikonica"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ikonica_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CampingApp">
        <activity
            android:name=".activities.ActivityNotificationDetailView"
            android:exported="false"
            android:launchMode="singleTask"
            android:taskAffinity=""
            android:excludeFromRecents="true"/>

        <service
            android:name=".services.ServiceNearActivities"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".services.ServicePushNotification"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".services.ServiceSendLocation"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".services.ServiceNotificationSpamFirestore"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".activities.ActivityTrip"
            android:exported="true"
            android:parentActivityName=".activities.ActivityMain"/>
        <activity
            android:name=".activities.ActivityAddTrip"
            android:exported="true"
            android:theme="@style/Pls.work" />
        <activity
            android:name=".activities.ActivityAddFriends"
            android:exported="true" />
        <activity
            android:name=".activities.ActivityMain"
            android:exported="true"
            android:theme="@style/Pls.work"
            android:parentActivityName=".activities.ActivityLogin"/>
        <activity
            android:name=".activities.ActivityLogin"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.android.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>